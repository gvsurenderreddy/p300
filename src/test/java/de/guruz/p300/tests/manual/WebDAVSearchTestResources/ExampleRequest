SEARCH / HTTP/1.1
Host: example.org
Content-Type: application/xml; charset="utf-8" 
Content-Length: 408

<d:searchrequest xmlns:d="DAV:">
  <d:basicsearch>
    <d:select>
      <d:allprop/>
    </d:select>
    <d:from>
      <d:scope>
        <d:href>/shares/</d:href>
        <d:depth>infinity</d:depth>
      </d:scope>
    </d:from>
    <d:where>
      <d:eq> 
        <d:prop><d:displayname/></d:prop>
        <d:literal>TestFile</d:literal>
      </d:eq>
    </d:where>
  </d:basicsearch>
</d:searchrequest>
